# 生产环境配置文件
# 复制此文件为 .env.production 并填入实际值

# 基础配置
NODE_ENV=production
PORT=3000

# 网站基础信息
NEXT_PUBLIC_SITE_URL=https://xingjuai.icu
NEXT_PUBLIC_SITE_NAME=星炬耀森AI企业官网

# API配置
# NEXT_PUBLIC_API_URL=https://api.xingjuai.icu
# API_SECRET_KEY=your_api_secret_key_here

# 数据库配置（如果使用）
# DATABASE_URL=postgresql://username:password@localhost:5432/database_name
# REDIS_URL=redis://localhost:6379

# 第三方服务配置
# 邮件服务
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=your_email@example.com
# SMTP_PASS=your_email_password

# 云存储配置（如果使用）
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=your-bucket-name

# 阿里云OSS配置（如果使用）
# ALIYUN_ACCESS_KEY_ID=your_aliyun_access_key
# ALIYUN_ACCESS_KEY_SECRET=your_aliyun_secret_key
# ALIYUN_OSS_REGION=oss-cn-hangzhou
# ALIYUN_OSS_BUCKET=your-bucket-name

# 腾讯云COS配置（如果使用）
# TENCENT_SECRET_ID=your_tencent_secret_id
# TENCENT_SECRET_KEY=your_tencent_secret_key
# TENCENT_COS_REGION=ap-guangzhou
# TENCENT_COS_BUCKET=your-bucket-name

# 分析和监控
# GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
# BAIDU_ANALYTICS_ID=your_baidu_analytics_id

# 安全配置
# JWT_SECRET=your_jwt_secret_key_here
# NEXTAUTH_SECRET=your_nextauth_secret_here
# NEXTAUTH_URL=https://xingjuai.icu

# 缓存配置
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=your_redis_password

# 日志配置
LOG_LEVEL=info
LOG_FILE_PATH=/www/wwwroot/xingjuai.icu/logs/app.log

# 性能配置
# CDN_URL=https://cdn.xingjuai.icu
# IMAGE_OPTIMIZATION=true

# 开发工具配置（生产环境通常设为false）
NEXT_PUBLIC_SHOW_DEBUG=false
ANALYZE_BUNDLE=false

# 其他自定义配置
# CUSTOM_CONFIG_1=value1
# CUSTOM_CONFIG_2=value2